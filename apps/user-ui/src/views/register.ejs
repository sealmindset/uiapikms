<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title><%= title %></title>
    <style>
      body { font-family: Inter, system-ui, -apple-system, Segoe UI, Roboto, "Helvetica Neue", Arial; margin: 0; padding: 2rem; background:#0b1020; color:#e6e8ef; }
      .card { max-width: 720px; margin: 6vh auto; background:#121733; border:1px solid #2a2f4a; border-radius:12px; padding: 2rem; box-shadow: 0 10px 25px rgba(0,0,0,0.25); }
      .row { display:flex; justify-content: space-between; align-items: center; }
      .muted { color:#a3a7bf; }
      label { display:block; margin:.6rem 0 .25rem; }
      input, select { width:100%; padding:.5rem .6rem; border-radius:8px; background:#0b1020; border:1px solid #2a2f4a; color:#e6e8ef; }
      button.btn { margin-top:1rem; background:#3b82f6; border:none; color:white; padding:.6rem 1rem; border-radius:8px; cursor:pointer; }
      button.btn:hover { background:#2563eb; }
      a { color:#93c5fd; }
      .error { color:#fecaca; font-size:.9rem; margin-top:.35rem; }
    </style>
  </head>
  <body>
    <div class="card">
      <div class="row">
        <h1 style="margin:0">Register API Use</h1>
        <a href="/keys">Back to Keys</a>
      </div>
      <% if (typeof errors !== 'undefined' && errors && errors.length) { %>
        <div style="background:#3f1d2e; color:#fecdd3; border:1px solid #7f1d1d; padding:.75rem 1rem; border-radius:8px; margin: 1rem 0;">
          <strong>There were problems with your submission:</strong>
          <ul>
            <% errors.forEach(function(err){ %>
              <li><%= err.message %></li>
            <% }) %>
          </ul>
        </div>
      <% } %>
      <% const f = (typeof form !== 'undefined' && form) ? form : {}; %>
      <% const errMap = (typeof errors !== 'undefined' && Array.isArray(errors)) ? errors.reduce(function(acc, e){ var k = e.path || '_'; (acc[k]||(acc[k]=[])).push(e.message); return acc; }, {}) : {}; %>
      <form method="post" action="/register">
        <input type="hidden" name="_csrf" value="<%= (typeof csrfToken !== 'undefined' && csrfToken) ? csrfToken : '' %>" />
        <label for="purpose">Purpose</label>
        <select id="purpose" name="purpose" required <%= errMap.purpose ? 'aria-invalid="true" aria-describedby="error-purpose"' : '' %>>
          <% const p = f.purpose || '' %>
          <option value="internal_tooling" <%= p === 'internal_tooling' ? 'selected' : '' %>>Internal tooling</option>
          <option value="third_party_integration" <%= p === 'third_party_integration' ? 'selected' : '' %>>Third-party integration</option>
          <option value="other" <%= p === 'other' ? 'selected' : '' %>>Other</option>
        </select>
        <% if (errMap.purpose) { %><div id="error-purpose" class="error"><%= errMap.purpose.join(', ') %></div><% } %>

        <label for="projectName">Project Name</label>
        <input id="projectName" name="projectName" type="text" maxlength="200" placeholder="My Project" value="<%= f.projectName ? f.projectName : '' %>" <%= errMap.projectName ? 'aria-invalid="true" aria-describedby="error-projectName"' : '' %> />
        <% if (errMap.projectName) { %><div id="error-projectName" class="error"><%= errMap.projectName.join(', ') %></div><% } %>

        <label for="contactEmail">Contact Email</label>
        <input id="contactEmail" name="contactEmail" type="email" placeholder="you@example.com" value="<%= f.contactEmail ? f.contactEmail : '' %>" <%= errMap.contactEmail ? 'aria-invalid="true" aria-describedby="error-contactEmail"' : '' %> />
        <% if (errMap.contactEmail) { %><div id="error-contactEmail" class="error"><%= errMap.contactEmail.join(', ') %></div><% } %>

        <button class="btn" type="submit">Submit</button>
      </form>
    </div>
  </body>
</html>
